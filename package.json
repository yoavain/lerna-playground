{
  "name": "lerna-playground",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run lerna:bootstrap",
    "lerna:bootstrap": "lerna bootstrap --force-local",
    "postlerna:bootstrap": "lerna run build --since master",
    "lerna:list": "lerna list --toposort --all --graph",
    "lerna:build": "lerna run build",
    "lerna:version": "lerna version patch --yes",
    "lerna:publish": "lerna publish from-package",
    "lerna:version:force": "lerna version patch --yes --force-publish",
    "graph": "lerna-dependency-graph --graphvizCommand dot --outputFormat png --outputPath lerna-graph/graph.png"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "lerna": "4.0.0",
    "lerna-dependency-graph": "1.0.2"
  }
}
